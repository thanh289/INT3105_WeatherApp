{
  "name": "weather-rest-api",
  "version": "1.0.0",
  "description": "A simple weather-rest-api application",
  "main": "index.js",
  "scripts": {
    "compile": "tsc -p tsconfig.json",
    "start-production": "node dist/server.js",
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "client": "npm start --prefix frontend",
    "test": "mocha --timeout 30000 -r ts-node/register src/test/*.test.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix --ext .ts,.tsx .",
    "prettier": "prettier src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "watch-ts": "tsc -w"
  },
  "keywords": [
    "node.js",
    "express.js",
    "typescript",
    "redis",
    "API",
    "MongoDB",
    "REST API",
    "Weather API"
  ],
  "author": "Md Sazzadul Islam",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.22",
    "@types/chai-http": "^4.2.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-validator": "^3.0.0",
    "@types/mocha": "^9.0.0",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.2",
    "nodemon": "^2.0.13",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "tslint": "^6.1.3",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "axios": "^0.22.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.2",
    "express-winston": "^4.2.0",
    "helmet": "^4.6.0",
    "moment": "^2.29.1",
    "mongoose": "^6.0.8",
    "redis": "^3.1.2",
    "winston": "^3.3.3"
  }
}
